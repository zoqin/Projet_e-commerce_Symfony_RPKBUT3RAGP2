{% extends 'base.html.twig' %}

{% block title %}{{ 'cart.title'|trans }}{% endblock %}

{% block body %}
    <h1> {{ 'cart.title'|trans }}</h1>

    {% if cart|length > 0 %}
        <table class="table">
            <thead>
            <tr>
                <th>{{ 'common.product'|trans }}</th>
                <th>{{ 'common.price'|trans }}</th>
                <th>{{ 'common.quantity'|trans }}</th>
                <th>{{ 'common.total'|trans }}</th>
                <th>{{ 'cart.actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for item in cart %}
                <tr>
                    <td>{{ item.product.name }}</td>
                    <td>{{ item.product.price }} €</td>
                    <td>
                        <a href="{{ path('app_cart_decrease', {id: item.product.id}) }}" class="btn btn-sm btn-outline-secondary">-</a>

                        <span class="mx-2">{{ item.quantity }}</span>

                        <a href="{{ path('app_cart_add', {id: item.product.id}) }}" class="btn btn-sm btn-outline-secondary">+</a>
                    </td>
                    <td>{{ item.product.price * item.quantity }} €</td>
                    <td>
                        <a href="{{ path('app_cart_remove', {id: item.product.id}) }}" class="btn btn-sm btn-danger">{{ 'common.delete'|trans }}</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
            <tfoot>
            <tr>
                <td colspan="3" class="text-end"><strong>{{ 'common.total'|trans }} :</strong></td>
                <td colspan="2"><strong>{{ total }} €</strong></td>
            </tr>
            </tfoot>
        </table>

        <div class="d-flex justify-content-end mt-4">
            <a href="{{ path('app_cart_clear') }}" class="btn btn-danger btn-sm">Vider le panier</a>
        </div>
        <div class="d-flex justify-content-end mt-4">
            <a href="{{ path('app_cart_validate') }}" class="btn btn-success btn-lg">Payer et Valider la commande</a>
        </div>
    {% else %}
        <div class="alert alert-info"> {{ 'cart.empty'|trans }}</div>
        <a href="{{ path('home') }}">{{ 'return.products'|trans }}</a>
    {% endif %}
{% endblock %}
