{% extends 'base.html.twig' %}

{% block title %}{{ 'category.index.title'|trans }}{% endblock %}

{% block body %}
    <h1>{{ 'category.index.title'|trans }}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>{{ 'common.id'|trans }}</th>
                <th>{{ 'common.name'|trans }}</th>
                <th>{{ 'common.actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>
                    <a href="{{ path('app_category_show', {'id': category.id}) }}">{{ 'index.show'|trans }}</a>
                    <a href="{{ path('app_category_edit', {'id': category.id}) }}">{{ 'index.edit'|trans }}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">{{ 'category.no_data'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="d-flex justify-content-center mt-4">
        {{ knp_pagination_render(categories) }}
    </div>

    <a href="{{ path('app_category_new') }}">{{ 'category.create_new'|trans }}</a>
{% endblock %}
