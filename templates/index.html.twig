{% extends 'base.html.twig' %}

{% block body %}
<div class="container my-5">

    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold">Bienvenue sur notre Boutique</h1>
        <p class="lead text-muted">Découvrez nos produits exceptionnels</p>
    </div>

    <div class="row">

        <div class="col-md-3 mb-4">
            <form action="{{ path('home') }}" method="get">
                    <div class="d-grid gap-2">
                        {% for category in categories %}
                            <div class="form-check">
                                <input class="form-check-input"
                                       type="checkbox"
                                       name="categories[]"
                                       value="{{ category.id }}"
                                       id="cat_{{ category.id }}"

                                        {{ category.id in selectedCategories ? 'checked' : '' }}
                                >
                                <label class="form-check-label" for="cat_{{ category.id }}">
                                    {{ category.name }}
                                </label>
                            </div>
                        {% endfor %}
                    </div>

                    <hr>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-sm">Appliquer les filtres</button>

                        <a href="{{ path('home') }}" class="btn btn-link btn-sm text-decoration-none mt-1">Réinitialiser</a>
                    </div>
            </form>
        </div>


        <div class="col-md-9">
            {% if products|length == 0 %}
                <div class="alert alert-warning">Aucun produit trouvé dans cette catégorie.</div>
            {% else %}
                <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                    {% for product in products %}
                        <div class="col">
                            <div class="card h-100 shadow-sm border-0">
                                {% if product.images is not empty %}
                                    {% set image = (product.images|first).url %}
                                {% else %}
                                    {% set image = "https://picsum.photos/seed/#{ product.id }/300/200" %}
                                {% endif %}
                                <img src="{{ image }}" class="card-img-top" alt="{{ product.name }} {{image|slice(0,80)}}">

                                <div class="card-img-overlay p-2 d-flex flex-column align-items-end" style="pointer-events: none">
                                    {% if product.status.name == 'RUPTURE' %}
                                        <span class="badge bg-{{ product.status.getBootstrapColor }}">Rupture</span>
                                    {% elseif product.status.name == 'PRECOMMANDE' %}
                                        <span class="badge bg-{{ product.status.getBootstrapColor }}">Précommande</span>
                                    {% endif %}
                                </div>

                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title">{{ product.name }}</h5>

                                    <p class="card-text text-muted small flex-grow-1">
                                        {{ product.description ? product.description|slice(0, 80) ~ '...'}}
                                    </p>

                                    <div class="d-flex justify-content-between align-items-center mt-3">
                                        <span class="h5 mb-0 fw-bold text-primary">{{ product.price }} €</span>


                                        {% if product.stock > 0 or product.status.name == 'PRECOMMANDE' %}
                                            <a href="{{ path('app_cart_add', {id: product.id}) }}" class="btn btn-outline-dark btn-sm">
                                                <i class="bi-cart-plus"></i> Ajouter
                                            </a>
                                        {% else %}
                                            <button class="btn btn-secondary btn-sm" disabled>Indisponible</button>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}


            <div class="mt-4">{{ knp_pagination_render(products) }}</div>
        </div>
    </div>
</div>
{% endblock %}